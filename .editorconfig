# EditorConfig helps developers define and maintain consistent coding styles
# See http://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML/JSON files
[*.yml]
[*.yaml]
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# TOML files (pyproject.toml, etc.)
[*.toml]
indent_style = space
indent_size = 2

# ReStructuredText (docs)
[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

# Ignore binary files and images
[*.{png,jpg,jpeg,gif,svg,ico}]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
charset = unset
indent_style = unset
indent_size = unset
